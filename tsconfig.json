{
  "compilerOptions": {
    "module": "esNext",
    "target": "es2017",
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react", 
    "allowJs": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@components": [
        "components"
      ],
      "@models": [
        "models"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils": [
        "utils"
      ],
      "@config": [
        "config"
      ],
      "@ts-types": [
        "ts-types"
      ],
      "@enums": [
        "utils/enums"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}